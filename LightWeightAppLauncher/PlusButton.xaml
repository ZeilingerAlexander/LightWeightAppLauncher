<Grid x:Class="LightWeightAppLauncher.PlusButton"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Height="100" Width="100">
    <Grid.Resources>
        <Style x:Key="tbxHover" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#2ecc71"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#3498db"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Grid.Resources>
    <Border Height="50" Width="50" BorderBrush="#ecf0f1" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="5">
        <Viewbox>
            <TextBlock Style="{StaticResource tbxHover}" Text="➕"/>
        </Viewbox>
    </Border>
</Grid>